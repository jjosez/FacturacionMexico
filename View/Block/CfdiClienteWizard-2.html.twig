{% import 'Macro/Form.html.twig' as form %}
<div class="card mb-3">
    <div class="card-header">
        <button type="button" class="btn btn-warning btn-sm" data-toggle="modal" data-target="#modalRelacionados">
            <i class="fas fa-plus-circle"></i> Agregar CFDI's Relacionados
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-sm table-striped">
                <thead>
                <tr>
                    <th>Tipo Relación</th>
                    <th>UUID</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
                </thead>
                <tbody id="tablaRelacionados">
                <!-- Relacionados agregados -->
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- MODAL -->
<div class="modal fade" id="modalRelacionados" tabindex="-1" role="dialog" aria-labelledby="modalRelacionadosLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Seleccionar CFDI's del cliente</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Cerrar">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row mb-2">
                    <div class="col-md-4">
                        <label for="filterTipoModal">Tipo CFDI</label>
                        <select id="filterTipoModal" class="form-control form-control-sm">
                            <option value="">Todos</option>
                            <option value="I">Ingreso</option>
                            <option value="E">Egreso</option>
                            <option value="T">Traslado</option>
                            <option value="P">Pago</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label for="filterFechaDesdeModal">Fecha desde</label>
                        <input type="date" id="filterFechaDesdeModal" class="form-control form-control-sm">
                    </div>
                    <div class="col-md-4">
                        <label for="filterFechaHastaModal">Fecha hasta</label>
                        <input type="date" id="filterFechaHastaModal" class="form-control form-control-sm">
                    </div>
                </div>

                <div class="table-responsive">
                    <table class="table table-sm table-bordered">
                        <thead class="thead-light">
                        <tr>
                            <th></th>
                            <th>Tipo</th>
                            <th>UUID</th>
                            <th>Total</th>
                            <th>Fecha</th>
                        </tr>
                        </thead>
                        <tbody id="tablaCfdiModal">
                        <!-- Filas dinámicas -->
                        </tbody>
                    </table>
                </div>

                <div class="form-group">
                    {# <label for="tipoRelacionModal">Tipo de relación</label> #}
                    {# <select id="tipoRelacionModal" class="form-control">
                        {% for value, label in fsc.getCatalogoSat().tipoRelacion().all() %}
                            <option value="{{ value }}">{{ label }}</option>
                        {% endfor %}
                    </select> #}
                    {{ form.inputselect('tipoRelacionModal', 'tipoRelacionModal', 'Tipo de relación',
                        fsc.getCatalogoSat().tipoRelacion().all(), tipoRelacion) }}
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirmRelacionados">Agregar seleccionados</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
