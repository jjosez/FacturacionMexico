{% import 'Macro/Form.html.twig' as form %}

<div class="card mb-3">
    <div class="card-header bg-dark text-white fw-bold">
        CFDI's Relacionados
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped mb-0">
                <thead>
                <tr>
                    <th>Receptor</th>
                    <th>Tipo Relación</th>
                    <th>UUID</th>
                    <th>Estado</th>
                    <th>Total</th>
                    <th>Fecha</th>
                    <th>Acción</th>
                </tr>
                </thead>
                <tbody id="cfdi:related:list:view">
                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer">
        <button type="button"
                class="btn btn-warning"
                data-bs-toggle="collapse"
                data-bs-target="#collapseBusqueda"
                aria-expanded="false"
                aria-controls="collapseBusqueda">
            Buscar CFDI
        </button>
    </div>
</div>

<!-- COLLAPSE DE BÚSQUEDA -->
<div class="collapse" id="collapseBusqueda">
    <div class="card mb-3">
        <div class="card-header bg-info text-white fw-bold">
            Buscar CFDI.
        </div>
        <div class="card-body p-0">
            <!-- Filtros de búsqueda -->
            <div class="row g-2 mb-3 p-4">
                <div class="col-md-4">
                    <label for="filterTipoModal" class="form-label">Tipo CFDI</label>
                    <select id="filterTipoModal" class="form-control form-control-sm">
                        <option value="">Todos</option>
                        <option value="I">Ingreso</option>
                        <option value="E">Egreso</option>
                        <option value="T">Traslado</option>
                        <option value="P">Pago</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="filterFechaDesdeModal" class="form-label">Fecha desde</label>
                    <input type="date" id="filterFechaDesdeModal"
                           class="form-control form-control-sm">
                </div>
                <div class="col-md-4">
                    <label for="filterFechaHastaModal" class="form-label">Fecha hasta</label>
                    <input type="date" id="filterFechaHastaModal"
                           class="form-control form-control-sm">
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                    <tr>
                        <th>Receptor</th>
                        <th>Tipo</th>
                        <th>UUID</th>
                        <th>Estado</th>
                        <th>Total</th>
                        <th>Fecha</th>
                        <th>Acción</th>
                    </tr>
                    </thead>
                    <tbody id="cfdi:search:list:view">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <button type="button" class="btn btn-secondary" data-bs-toggle="collapse"
                    data-bs-target="#collapseBusqueda">
                Cerrar
            </button>
        </div>
    </div>
</div>

<div class="modal fade" id="modalTipoRelacion" tabindex="-1" aria-labelledby="modalTipoRelacionLabel"
     aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTipoRelacionLabel">Agregar CFDI Relacionado</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label"><strong>UUID:</strong></label>
                    <p id="modalCfdiUuid" class="text-muted mb-0"></p>
                </div>
                <div class="mb-3">
                    <label class="form-label"><strong>Total:</strong></label>
                    <p id="modalCfdiTotal" class="text-muted mb-0"></p>
                </div>
                <div class="mb-3">
                    {{ form.inputselect(
                        'tipoRelacionModal',
                        'tipoRelacionModal',
                        'Tipo de relación',
                        fsc.getCatalogoSat().tipoRelacion().all(),
                        tipoRelacion
                    ) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmRelacionados">Confirmar</button>
            </div>
        </div>
    </div>
</div>

<script type="text/template" id="cfdi:search:row:template">
    <td><%= it.receptor_nombre %></td>
    <td><%= it.tipo %></td>
    <td>
        <%= it.uuid %>
    </td>
    <td>
        <% if (it.estado === 'Timbrado') { %>
        <span class="badge bg-success ms-1">Vigente</span>
        <% } else if (it.estado === 'Cancelado') { %>
        <span class="badge bg-danger ms-1">Cancelado</span>
        <% } else if (it.estado === 'Pendiente') { %>
        <span class="badge bg-warning ms-1">Pendiente</span>
        <% } %>
        <% if (it.cfdiglobal == '1' || it.cfdiglobal == 1) { %>
        <span class="badge bg-info ms-1">Global</span>
        <% } %>
    </td>
    <td><%= it.total %></td>
    <td><%= it.fecha_timbrado %></td>
    <td>
        <button type="button"
                class="btn btn-sm btn-primary btn-add-cfdi"
                data-uuid="<%= it.uuid %>"
                data-tipo="<%= it.tipo %>"
                data-total="<%= it.total %>"
                data-fecha="<%= it.fecha_timbrado %>"
                data-global="<%= it.cfdiglobal %>"
                data-estado="<%= it.estado %>"
                data-receptor="<%= it.receptor_nombre %>">
            Agregar
        </button>
    </td>
</script>

<script type="text/template" id="cfdi:related:row:template">
    <td><%= it.receptor %></td>
    <td><%= it.tipoRelacion %></td>
    <td>
        <%= it.uuid %>
    </td>
    <td>
        <% if (it.estado === 'Timbrado') { %>
        <span class="badge bg-success ms-1">Vigente</span>
        <% } else if (it.estado === 'Cancelado') { %>
        <span class="badge bg-danger ms-1">Cancelado</span>
        <% } else if (it.estado === 'Pendiente') { %>
        <span class="badge bg-warning ms-1">Pendiente</span>
        <% } %>
        <% if (it.global == '1' || it.global == 1) { %>
        <span class="badge bg-info ms-1">Global</span>
        <% } %>
        <input type="hidden" name="relacionados[<%= it.tipoRelacion %>][]" value="<%= it.uuid %>">
    </td>
    <td><%= it.total %></td>
    <td><%= it.fecha %></td>
    <td>
        <button type="button" class="btn btn-sm btn-danger btn-remove">Eliminar</button>
    </td>
</script>
