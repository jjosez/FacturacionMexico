{% import 'Macro/Form.html.twig' as form %}
<div class="row row-cols-1 row-cols-md-2 g-4">
    <div class="col">
        <div class="card">
            <div class="card-header">Forma de pago CFDI</div>
            <div class="card-body">
                <div class="form-group">
                    {{ form.inputtext('formapago', 'Forma de pago', fsc.reader.formaPago(), 'disabled') }}
                </div>
                <div class="form-group">
                    {{ form.inputtext('metodopago', 'Método de pago', fsc.reader.metodoPago(), 'disabled') }}
                </div>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card">
            <div class="card-header">Forma de pago EMPRESA</div>
            <div class="card-body">
                <div class="form-group">
                    <label for="invoice_payment_method">{{ label }}</label>
                    <select id="invoice_payment_method" name="invoice-payment-method" class="form-control" required>
                        {% for item in fsc.cfdiToInvoicePaymentMethods() %}
                            <option value="{{ item.id() }}" {% if fsc.reader.formaPago() == item.clavesat %} selected {% endif %}>
                                {{ item.clavesat }} - {{ item.descripcion }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    {{ form.inputtext('metodopago', 'Método de pago', fsc.reader.metodoPago(), 'disabled') }}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">Confirmar información</div>
    <div class="card-body">
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="saveCfdiData" name="save-cfdi-data">
                <label class="form-check-label" for="saveCfdiData">
                    Actualizar / Registrar CFDI
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="saveInvoiceData" name="save-product-data">
                <label class="form-check-label" for="saveInvoiceData">
                    Actualizar / Registrar Factura
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="saveProductsData" name="save-product-data">
                <label class="form-check-label" for="saveProductsData">
                    Actualizar / Registrar Productos
                </label>
            </div>
        </div>
    </div>
    <div class="card-footer text-white text-right">
        <button type="submit" class="btn btn-primary">Confirmar</button>
    </div>
</div>
