{% extends 'Master/MenuBgTemplate.html.twig' %}
{% import 'Macro/Form.html.twig' as form %}

{% block bodyHeaderOptions %}
    <div class="container-fluid mb-2">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="btn-group mb-2 mb-md-0">
                    <a class="btn btn-sm btn-dark" href="{{ fsc.url() }}" title="Recargar">
                        <i class="fas fa-redo" aria-hidden="true"></i>
                    </a>
                    <a class="btn btn-sm btn-secondary" href="{{ asset('ListCfdiCliente') }}" title="Todos">
                        <i class="fas fa-list" aria-hidden="true"></i>&nbsp;Todos
                    </a>
                    <a class="btn btn-sm btn-info" href="{{ fsc.factura.url() }}" title="{{ fsc.factura.codigo }}">
                        <i class="fas fa-file-invoice" aria-hidden="true"></i>
                        {{ fsc.factura.codigo }}
                    </a>
                    <button type="button" class="btn btn-sm btn-warning" data-bs-toggle="modal"
                            data-bs-target="#pendientesTimbradoModal">
                        <i class="fas fa-hourglass-half" aria-hidden="true"></i>
                        Pendientes
                    </button>
                </div>

                <div class="dropdown d-inline-block">
                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        Exportar
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ fsc.url() }}&amp;action=download-pdf" target="_blank" class="dropdown-item">
                                <i class="fas fa-file-pdf fa-fw" aria-hidden="true"></i>&nbsp;Archivo PDF
                            </a>
                        </li>
                        <li>
                            <a href="{{ fsc.url() }}&amp;action=download-xml" class="dropdown-item">
                                <i class="fas fa-download fa-fw" aria-hidden="true"></i>&nbsp;Archivo XML
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <a href="{{ fsc.url() }}&amp;action=enviar-email" class="dropdown-item">
                                <i class="fas fa-envelope fa-fw"></i>&nbsp;Email
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="dropdown d-inline-block">
                    <button class="btn btn-sm btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                        PAC
                    </button>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="{{ fsc.url() }}&amp;action=status" class="dropdown-item">
                                <i class="fas fa-info-circle fa-fw"></i>&nbsp;Consultar Estado
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li>
                            <form id="cancelarCfdiForm" method="post">
                                <input type="hidden" name="action" value="cancelar">
                                <button type="submit" class="dropdown-item text-danger border-0 bg-transparent">
                                    <i class="fas fa-skull fa-fw" aria-hidden="true"></i>&nbsp;Cancelar
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-4 text-md-end">
                <h1 class="h5 mb-0">
                    <strong class="small text-muted">UUID:</strong> <span class="fs-6">{{ fsc.cfdi.uuid }}</span>
                    <i class="fas fa-file-invoice fa-fw text-secondary" aria-hidden="true"></i>
                </h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        {% if 'Cancelado' == fsc.cfdi.estado %}
            <div class="alert alert-danger d-flex align-items-center" role="alert">
                <i class="fas fa-ban me-2"></i>
                <div><strong>Cancelado</strong></div>
            </div>
        {% endif %}
        {% if fsc.cfdi.fechaemail is null %}
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <div>Aun no se ha enviado el email.</div>
            </div>
        {% endif %}

        {# Reemplazo de card-deck por row g-3 (Gutters) #}
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-dark text-white">Cliente</div>
                    <div class="card-body">
                        <div class="mb-3">
                            {# SE MANTIENE EL MACRO form.inputtext #}
                            {{ form.inputtext('razonsocial', 'Razón social', fsc.reader.receptorNombre(), 'disabled') }}
                        </div>
                        <div class="mb-3">
                            {# SE MANTIENE EL MACRO form.inputtext #}
                            {{ form.inputtext('rfc', 'RFC', fsc.reader.receptorRfc(), 'disabled') }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100">
                    <div class="card-header bg-dark text-white">Factura</div>
                    <div class="card-body">
                        <div class="mb-3">
                            {{ form.inputtext('lugerexpedicion', 'Lugar de expedición', fsc.reader.lugarExpedicion, 'disabled') }}
                        </div>
                        <div class="mb-3">
                            {{ form.inputtext('fechaemision', 'Fecha de expedición', fsc.reader.fechaExpedicion, 'disabled') }}
                        </div>
                        <div class="mb-3">
                            {{ form.inputtext('fechatimbrado', 'Fecha de timbrado', fsc.reader.fechaTimbrado, 'disabled') }}
                            <div class="form-text mt-1 text-muted">Factura enviada el: {{ fsc.factura.femail }}</div>
                        </div>
                        <div class="mb-0">
                            <label class="form-label fw-bold">Observaciones:</label>
                            <p class="mb-0 text-muted small">{{ fsc.reader.addendaObservaciones() }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {{ _self.blockCfdiRelacionados(fsc.reader.relacionados(), fsc) }}
        {{ _self.blockCfdiConceptos(fsc.reader.conceptos(), fsc) }}

        <div class="card mb-3">
            <div class="card-header bg-dark text-white">
                <i class="fa-solid fa-calculator me-2"></i>Totales
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th scope="col">Subtotal:</th>
                            <th scope="col">Descuento:</th>
                            <th scope="col">Impuesto:</th>
                            <th scope="col">Total:</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td class="text-center">{{ fsc.factura.neto }}</td>
                            <td class="text-center">0</td>
                            <td class="text-center">{{ fsc.factura.totaliva }}</td>
                            <td class="text-center fw-bold">{{ fsc.cfdi.total }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-dark text-white">SAT</div>
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-lg-3 d-none d-lg-block text-center border-end">
                        {% set qrUrl = myFilesUrl('MyFiles/CFDI/qrcode.png') %}
                        {% if qrUrl %}
                            <img src="{{ qrUrl }}" alt="QRCode" class="img-fluid w-100 d-block mx-auto">
                        {% else %}
                            <i class="fas fa-certificate fa-3x text-light"></i>
                        {% endif %}
                    </div>
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-md-4 mb-2">
                                <span class="d-block fw-bold small text-muted">NoCertificadoSAT:</span>
                                <span class="small">{{ fsc.reader.certificadoSAT() }}</span>
                            </div>
                            <div class="col-md-4 mb-2">
                                <span class="d-block fw-bold small text-muted">RfcProvCertif:</span>
                                <span class="small">{{ fsc.reader.proveedorCertificacion() }}</span>
                            </div>
                            <div class="col-md-4 mb-2">
                                <span class="d-block fw-bold small text-muted">FechaTimbrado:</span>
                                <span class="small">{{ fsc.reader.fechaTimbrado() }}</span>
                            </div>
                        </div>
                        <div class="row">
                            <span><strong>Sello CFD</strong></span>
                            <p>{{ fsc.reader.selloCfd() }}</p>
                            <span><strong>Sello SAT</strong></span>
                            <p>{{ fsc.reader.selloSat() }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'Modal/CfdiModals.html.twig' %}
{% endblock %}

{% macro blockCfdiRelacionados(relacionados, fsc) %}
    {% if relacionados is not empty %}
        <div class="card mb-3">
            <div class="card-header bg-light"><i class="fas fa-link me-2"></i>CFDIs Relacionados</div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                        <tr>
                            <th>Tipo Relación</th>
                            <th>UUID</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for rel in relacionados %}
                            <tr>
                                <td><span class="badge bg-secondary">{{ rel.tipoRelacion }}</span></td>
                                <td class="font-monospace small">{{ rel.uuid }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endmacro %}

{% macro blockCfdiConceptos(conceptos, fsc) %}
    <div class="card mb-3">
        <div class="card-header bg-dark text-white"><i class="fas fa-list-ol me-2"></i>Conceptos</div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                    <tr>
                        <th>Clave SAT</th>
                        <th>Cantidad</th>
                        <th>Unidad</th>
                        <th>Descripción</th>
                        <th class="text-end">Valor Unitario</th>
                        <th class="text-end">Importe</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for concepto in conceptos %}
                        <tr>
                            <td><span class="badge border text-dark">{{ concepto.ClaveProdServ }}</span></td>
                            <td>{{ concepto.Cantidad }}</td>
                            <td>{{ concepto.ClaveUnidad }}</td>
                            <td>
                                {{ concepto.Descripcion }}
                                {% if concepto.Descuento > 0 %}
                                    <div class="small text-danger">Descuento: {{ concepto.Descuento }}</div>
                                {% endif %}
                            </td>
                            <td class="text-end">{{ concepto.ValorUnitario }}</td>
                            <td class="text-end fw-bold">{{ concepto.Importe }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endmacro %}
