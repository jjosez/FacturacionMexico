    Description:
        Structure for the cfdisclientes table.
-->
<table>
    <column>
        <name>cfdirelacionado</name>
        <type>integer</type>
        <null>YES</null>
    </column>
    <column>
        <name>codcliente</name>
        <type>character varying(10)</type>
    </column>
    <column>
        <name>coddivisa</name>
        <type>character varying(3)</type>
        <null>NO</null>
    </column>
    <column>
        <name>estado</name>
        <type>character varying(10)</type>
        <null>NO</null>
    </column>
    <column>
        <name>fecha</name>
        <type>timestamp</type>
    </column>
    <column>
        <name>fechamod</name>
        <type>timestamp</type>
        <null>YES</null>
    </column>
    <column>
        <name>fechaemail</name>
        <type>date</type>
        <null>YES</null>
    </column>
    <column>
        <name>folio</name>
        <type>character varying(40)</type>
        <null>NO</null>
    </column>
    <column>
        <name>formapago</name>
        <type>character varying(100)</type>
        <null>NO</null>
    </column>  
    <column>
        <name>idcfdi</name>
        <type>serial</type>
        <null>NO</null>
        <default>nextval('cfdiscli_idcfdi_seq'::regclass)</default>
    </column>
    <column>
        <name>idempresa</name>
        <type>integer</type>
    </column>
    <column>
        <name>idfactura</name>
        <type>integer</type>
        <null>NO</null>
    </column>        
    <column>
        <name>metodopago</name>
        <type>character varying(30)</type>
        <null>NO</null>
    </column>
    <column>
        <name>razonreceptor</name>
        <type>character varying(100)</type>
    </column> 
    <column>
        <name>rfcreceptor</name>
        <type>character varying(20)</type>
        <null>NO</null>
    </column>
    <column>
        <name>serie</name>
        <type>character varying(25)</type>
        <null>NO</null>
    </column>
    <column>
        <name>tipocfdi</name>
        <type>character varying(1)</type>
        <null>NO</null>
    </column>
    <column>
        <name>total</name>
        <type>double precision</type>
        <null>NO</null>
    </column>
    <column>
        <name>uuid</name>
        <type>character varying(36)</type>
        <null>NO</null>
    </column>
    <column>
        <name>version</name>
        <type>character varying(4)</type>
        <null>NO</null>
    </column>
    <constraint>
        <name>cfdisclientes_pkey</name>
        <type>PRIMARY KEY (idcfdi)</type>
    </constraint>
    <constraint>
        <name>ca_cfdisclientes_empresas</name>
        <type>FOREIGN KEY (idempresa) REFERENCES empresas (idempresa) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_cfdisclientes_facturascli</name>
        <type>FOREIGN KEY (idfactura) REFERENCES facturascli (idfactura) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>ca_cfdisclientes_relacion</name>
        <type>FOREIGN KEY (cfdirelacionado) REFERENCES cfdisclientes (idcfdi) ON DELETE RESTRICT ON UPDATE CASCADE</type>
    </constraint>
    <constraint>
        <name>uniq_uuid_cfdisclientes</name>
        <type>UNIQUE (uuid,idempresa)</type>
    </constraint>
</table>
